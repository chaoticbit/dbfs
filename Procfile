newyork:   env PORT=3000 NODE=newyork   elixir --name node_1@dbfs.newyork    --erl "-config sys.config" -S mix phoenix.server
london:    env PORT=3001 NODE=london    elixir --name node_2@dbfs.london     --erl "-config sys.config" -S mix phoenix.server
singapore: env PORT=3002 NODE=singapore elixir --name node_3@dbfs.singapore  --erl "-config sys.config" -S mix phoenix.server

